<Window x:Class="Kursovaya.FilmDescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Описание фильма" Height="600" Width="800"
        Style="{DynamicResource WindowStyle}"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Style="{DynamicResource LoginStyle}"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ScrollViewer.Resources>
                <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource CustomScrollBar}"/>
            </ScrollViewer.Resources>
            <StackPanel>
                <Image Source="{Binding MoviePreview}" MaxWidth="300" MaxHeight="400" Margin="0,0,0,20" Stretch="Uniform"/>
                <TextBlock Text="Время:" FontWeight="Bold" Style="{DynamicResource LoginStyle}"/>
                <TextBlock Text="{Binding Time}" Margin="0,0,0,10" Style="{DynamicResource TextBlockStyle}"/>

                <TextBlock Text="Цена:" FontWeight="Bold" Style="{DynamicResource LoginStyle}"/>
                <TextBlock Text="{Binding Price}" Margin="0,0,0,10" Style="{DynamicResource TextBlockStyle}"/>

                <TextBlock Text="Описание:" FontWeight="Bold" Style="{DynamicResource LoginStyle}"/>
                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Style="{DynamicResource TextBlockStyle}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>