<Window x:Class="Kursovaya.SelectSeatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор мест" Height="600" Width="600"
        Style="{DynamicResource WindowStyle}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <UniformGrid x:Name="SeatsGrid" Rows="10" Columns="11" Margin="10" Height="auto">
            <!-- Здесь будут кнопки-места -->
        </UniformGrid>
            <DockPanel Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <Label Name="TitleLabel" Content="{Binding SelectedFilm.Title}" HorizontalAlignment="Left" FontSize="28" VerticalAlignment="Top"/>
                <Label Name="BalanceLabel" Content="Итого:" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            </DockPanel>
        <Label Margin="10 0" Content="Время сеанса:" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <ComboBox x:Name="comboBox1" Width="120" ItemsSource="{Binding SelectedFilm.Time}" SelectionChanged="ComboBox_SelectedIndexChanged" HorizontalAlignment="Right" SelectedItem="{Binding SelectedTime}" Margin="10"/>
            <Button Content="Подтвердить заказ" Click="ConfirmOrder_Click" Margin="10" HorizontalAlignment="Right" Style="{DynamicResource BaseButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
