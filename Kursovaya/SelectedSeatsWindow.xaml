<Window x:Class="Kursovaya.SelectSeatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор мест" Height="660" Width="600"
        Style="{DynamicResource WindowStyle}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Border x:Name="SeatsBorder" Style="{DynamicResource BorderStyle}">
                <UniformGrid x:Name="SeatsGrid" Rows="10" Columns="11" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <!-- Здесь будут кнопки-места -->
                </UniformGrid>
            </Border>
            <Border x:Name="InfoBorder" Style="{DynamicResource BorderStyle}">
                <DockPanel>
                    <Image Source="{Binding SelectedFilm.MoviePreview}" Height="200" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBlock Text="{Binding SelectedFilm.Title}" Style="{DynamicResource BigCaseStyle}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <StackPanel>
                        <Label Margin="10 10 10 0" Content="Время сеанса:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <ComboBox x:Name="comboBox1" Width="120" ItemsSource="{Binding SelectedFilm.TimeSlots}" Style="{DynamicResource ComboBoxStyle}" SelectionChanged="ComboBox_SelectedIndexChanged" VerticalAlignment="Center" HorizontalAlignment="Right" SelectedItem="{Binding SelectedTime}" Margin="10"/>
                        <Label Name="BalanceLabel" Margin="10" Content="Итого:" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                        <Button Content="Подтвердить заказ" Click="ConfirmOrder_Click" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{DynamicResource BaseButtonStyle}"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
