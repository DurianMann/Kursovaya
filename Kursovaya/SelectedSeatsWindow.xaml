<Window x:Class="Kursovaya.SelectSeatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор мест" Height="600" Width="600"
        Style="{DynamicResource WindowStyle}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <UniformGrid x:Name="SeatsGrid" Rows="10" Columns="11" Margin="10">
            <!-- Здесь будут кнопки-места -->
        </UniformGrid>
        <Label Name="BalanceLabel" Margin="10" Content="Итого:" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Label Margin="10 10 10 0" Content="Время сеанса:" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <ComboBox x:Name="comboBox1" Width="120" ItemsSource="{Binding SelectedFilm.Time}" HorizontalAlignment="Right" SelectedItem="{Binding SelectedTime}" Margin="10"/>
            <Button Content="Подтвердить заказ" Click="ConfirmOrder_Click" Margin="10" HorizontalAlignment="Right" Style="{DynamicResource BaseButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
