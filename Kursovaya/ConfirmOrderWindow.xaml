<Window x:Class="Kursovaya.ConfirmOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение заказа" Height="400" Width="450"
        Style="{DynamicResource WindowStyle}">
    <Grid Margin="10">
        <StackPanel>
            
            <TextBlock Text="Подтверждение заказа" FontSize="16" Margin="0 0 0 10" Style="{DynamicResource TextBlockStyle}"/>
            <TextBlock Text="Фильм:" FontWeight="Bold"/>
            <TextBlock x:Name="FilmTitleTextBlock" Margin="20 0"/>

            <TextBlock Text="Сеанс:" FontWeight="Bold"/>
            <TextBlock x:Name="SessionTimeTextBlock" Margin="20 0"/>

            <TextBlock Text="Выбранные места:" FontWeight="Bold"/>
            <TextBlock x:Name="SelectedSeatsTextBlock" Margin="20 0"/>

            <TextBlock Text="Итого к оплате:" FontWeight="Bold"/>
            <TextBlock x:Name="TotalPriceTextBlock" Margin="20 0"/>

            <TextBlock Text="Доступный баланс:" FontWeight="Bold"/>
            <TextBlock x:Name="BalanceTextBlock" Margin="20 0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20">
                <Button Content="Подтвердить" Click="Confirm_Click" Margin="10" Style="{DynamicResource BaseButtonStyle}"/>
                <Button Content="Отменить" Click="Cancel_Click" Margin="10" Style="{DynamicResource BaseButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
