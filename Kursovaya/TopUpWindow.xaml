<Window x:Class="Kursovaya.TopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пополнение баланса" Height="320" Width="300"
        Style="{DynamicResource WindowStyle}"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="lblCurrentBalance" Text="Текущий баланс:" Style="{DynamicResource TextBlockStyle}"/>
            <TextBlock Text="Сумма пополнения:" Style="{DynamicResource TextBlockStyle}"/>
            <TextBox x:Name="txtAmount" Style="{DynamicResource BaseTextBoxStyle}"/>
            <Button Content="Пополнить" Click="TopUp_Click" Margin="0 20" Style="{DynamicResource BaseButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
