<Window x:Class="Kursovaya.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кинотеатр" Height="600" Width="800"
        Style="{DynamicResource WindowStyle}">
    <Grid>
        <StackPanel>
            <Label Content="Баланс:" FontSize="14" Margin="10"/>
            <Label x:Name="BalanceLabel" FontSize="28" Margin="10 0 10 10"/>
            <Button Content="Пополнить баланс" Click="TopUp_Click" Margin="10" Style="{DynamicResource BaseButtonStyle}"/>
            <TextBlock Text="Выберите фильм" FontSize="20" Margin="10" Style="{DynamicResource TextBlockStyle}"/>
            <ListBox x:Name="FilmList" SelectionChanged="FilmList_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Title}" Margin="5" Style="{DynamicResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding Time}" Margin="10 0" Style="{DynamicResource TextBlockStyle}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Выбрать места" Click="SelectSeats_Click" Margin="10" Style="{DynamicResource BaseButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>