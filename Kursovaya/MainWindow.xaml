<Window x:Class="Kursovaya.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кинотеатр" Height="auto" Width="800"
        Style="{DynamicResource WindowStyle}">
    <Grid>
        <StackPanel>
            <DockPanel>
                <TextBlock Text="Баланс:" FontSize="14" Style="{DynamicResource LoginStyle}"/>
                <Label x:Name="BalanceLabel" FontSize="28"  Margin="0 10 0 10" />
                <Button Content="+" Click="TopUp_Click" Margin="10" Width="auto" Height="auto" Style="{DynamicResource BaseButtonStyle}" HorizontalAlignment="Left"/>
                <Button Content="Билеты" Click="CheckSeats_Click" Margin="10" Width="auto" Height="auto" Style="{DynamicResource BaseButtonStyle}" HorizontalAlignment="right"/>
            </DockPanel>
            <TextBlock Text="Выберите фильм" FontSize="20"  Style="{DynamicResource TextBlockStyle}"/>
            <ScrollViewer x:Name="scrollViewer" Height="500" VerticalScrollBarVisibility="Auto" CanContentScroll="False"> 
                <ListBox x:Name="FilmList" SelectionChanged="FilmList_SelectionChanged" Height="auto" Margin="10" PreviewMouseWheel="FilmList_PreviewMouseWheel">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding MoviePreview}" Height="200"/>
                                <TextBlock Text="{Binding Title}" Style="{DynamicResource BigCaseStyle}"/>
                                <TextBlock Text="{Binding Time}" Style="{DynamicResource TextBlockStyle}"/>
                                <TextBlock Text="Цена:" Margin="10 10 0 10" Style="{DynamicResource TextBlockStyle}"/>
                                <TextBlock Text="{Binding Price}" Margin="0 10 0 10" Style="{DynamicResource TextBlockStyle}"/>
                                <TextBlock Text="р." Margin="0 10 10 10" Style="{DynamicResource TextBlockStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
            <Button Content="Выбрать места" Height="auto" Click="SelectSeats_Click" Style="{DynamicResource BaseButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>